<%- include header %>
<%- messages('message_template', locals) %>
<div class="row" style="margin-top: 40px;">

<div class="col-xs-4 text-left">
	<h3 class="polltitle"><%= polltitle %></h3>
	<p>I would like to vote for</p>
	<form method="post">
		<div class="form-group">
			<select class="form-control optionlog" name="options">
			</select>
		</div>
		<div class="addnewoption">
		</div>
		<button type="submit" class="btn btn-success">Submit</button>
	</form>

</div>
<div class="col-xs-8">
	<div class="chart" style="width: 400px; height: 400px; margin: auto;">
		<canvas id="myChart" width="400" height="400"></canvas>
	</div>
	<% if(currentUser == author){ %>
	<form action="/delete" method="post">
		<button type="submit" class="btn btn-danger btn-lg" style="margin-top: 20px;" name="title" value="<%= polltitle %>">Delete this poll</button>
	</form>
	<% } %> 
</div>
	
</div>

<script type="text/javascript" src="/public/js/vote.js"></script>
<%- include footer %>